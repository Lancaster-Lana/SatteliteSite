@model UserListViewModel
@using Sattelite.EntityFramework.ViewModels.Admin.User
@using Sattelite.Web

<div class="box-head h5">
    <span> Користувачі</span>
</div>

<table class="filterable table table-striped table-bordered">
    <thead>
        <tr class="list-group-item-heading">
            <th>
                @Html.Label("UserName")
            </th>
            <th>
                @Html.Label("DisplayName")
            </th>
            <th>
                @Html.Label("Email")
            </th>
            <th>
                @Html.Label("Role")
            </th>
            <th>
                @Html.Label("Actions")
            </th>
        </tr>
    </thead>
    <tbody>
     @foreach (var user in Model.AllUsers)
     {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Role.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { Class = "ico edit" }) |
                <a href="/Admin/User/Delete/@user.Id" class="ico del" data-toggle="modal" data-target="#delete_user_modal">
                    <span> Delete</span>
                </a>
                @*@Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @data_toogle = "modal", @data_target = "#delete_user_modal" })*@
            </td>
        </tr>
}
    </tbody>
</table>


<div class="buttons">
    @Html.ActionLink("Новий користувач", "Create", null, new { @class = "btn btn-success" })
</div>

<!--MODALS-->
<div id="delete_user_modal" class="modal fade" aria-hidden="true" aria-labelledby="AreaRole" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

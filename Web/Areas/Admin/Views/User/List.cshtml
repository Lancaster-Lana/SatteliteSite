@model UserListViewModel
@using Sattelite.EntityFramework.ViewModels.Admin.User
@using Sattelite.Web

@{
    Layout = null;
    var users = Model.Users; //AppCach.AllUsers
}

<div class="right-sidebar text-center">
    <div class="box">
        <div class="box-head">Управління </div>
        <div class="box-content">
            <a href="/Admin/User/Create" class="add-button">
                <span> Новий користувач</span>
            </a>
        </div>
        <div class="cl">&nbsp;</div>
    </div>
</div>

@if (users.Any())
{
    <table class="filterable table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.Label("UserName")
                </th>
                <th>
                    @Html.Label("DisplayName")
                </th>
                <th>
                    @Html.Label("Email")
                </th>
                <th>
                    @Html.Label("Role")
                </th>
                <th class="no-sort"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Role.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { id = user.Id }, new { Class = "ico edit" }) |
                        <a href="/Admin/User/Delete/@user.Id" class="ico del" data-toggle="modal" data-target="#delete_user_modal">
                            <span> Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!--MODALS-->
<div id="delete_user_modal" class="modal fade" aria-hidden="true" aria-labelledby="AreaUser" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

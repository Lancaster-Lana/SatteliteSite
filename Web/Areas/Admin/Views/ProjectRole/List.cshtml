@model ProjectRoleListViewModel
@using Sattelite.EntityFramework.ViewModels.Admin.Role
@using Sattelite.Web
@{
    Layout = null;

    var projectRoles = Model.ProjectRoles;
    // AppCach.AllProjectRoles; //predefined project roles
}

<div class="right-sidebar text-center">
    <div class="box">
        <div class="box-head">Управління </div>
        <div class="box-content">
            <a href="/Admin/ProjectRole/Create" class="add-button">
                <span> Нова проектна роль</span>
            </a>
        </div>
        <div class="cl">&nbsp;</div>
    </div>
</div>

@if (projectRoles.Any())
{
    <table class="filterable table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.Label("Name")
                </th>
                <th>
                    @Html.Label("Description")
                </th>
                <th class="no-sort"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var projectRole in projectRoles)
            {
                <tr>
                    <td>
                        <b>
                            @Html.DisplayFor(modelItem => projectRole.Name)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => projectRole.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "ProjectRole", new { id = projectRole.Id }, new { Class = "ico edit" }) |
                        <a href="/Admin/ProjectRole/Delete/@projectRole.Id" class="ico del" data-toggle="modal" data-target="#delete_projectrole_modal">
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Modals-->
<div id="delete_projectrole_modal" class="modal fade" aria-labelledby="AreaRole" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

@model RoleListViewModel
@using Sattelite.EntityFramework.ViewModels.Admin.Role
@using Sattelite.Web
@{
    //predefined roles
    var applicationRoles = AppCach.AllRoles; //Enum.GetNames(typeof(Sattelite.DefaultRoles));
    var projectRoles = AppCach.AllProjectRoles;//Enum.GetNames(typeof(Sattelite.DefaultProjectMemberRoles));
}
<div class="box-head h5">
    <span> Ролі </span>
</div>

@if (Model.Roles.Any())
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.Label("Name")
            </th>
            <th>
                @Html.Label("Description")
            </th>
            <th></th>
        </tr>

        @foreach (var role in Model.Roles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => role.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => role.Description)
                </td>
                @*<td> @Html.DisplayFor(modelItem => role.CreatedDate) </td>
                    <td> @Html.DisplayFor(modelItem => role.CreatedBy)</td>*@

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = role.Id }, new { Class = "ico edit" }) |
                    <a href="/Admin/Role/Delete/@role.Id" class="ico del" data-toggle="modal" data-target="#delete_role_modal">
                        Delete
                    </a>
                    @*@Html.ActionLink("Delete", "Delete", new { id = role.Id }, new { @data_toogle = "modal", @data_target = "#delete_role_modal" })*@
                </td>
            </tr>
        }
    </table>
}

<div class="buttons">
    @Html.ActionLink("Створити нову роль", "Create", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Список користувачів", "Index", "User", null, new { @class = "btn btn-info pull-left" })
</div>

<!-- Modals-->
<div id="delete_role_modal" class="modal fade" aria-labelledby="AreaRole" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>

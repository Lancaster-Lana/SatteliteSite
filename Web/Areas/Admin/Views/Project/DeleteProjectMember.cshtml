@using Sattelite.EntityFramework.ViewModels.Admin.Project
@model ProjectMemberViewModel
@{
    ViewBag.Title = "Видалити учасника проекту ?";
    Layout = null;
}

@using (Html.BeginForm("DeleteProjectMemberConfirm", "Project",
    new { area = "Admin", controller = "Project", @projectId = Model.ProjectId, @projectMemberId = Model.ProjectMemberId },
    FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.Partial("_SucceedMessage")
    @Html.Partial("_ErrorMessage")

    @Html.ValidationSummary(true)

    <div class="modal-header bg-info">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 id="AreaMember" class="modal-title panel-title">@ViewBag.Title @Model.User.UserName ?</h3>
    </div>
    <div class="modal-content">
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3">Project Role: </label>
            <label name="ProjectRole" class="form-control col-md-6 col-sm-6">@Model.ProjectRole.Name</label>
        </div>
    </div>
    @*@if (ViewBag.Error != null)
     {
            <label class="label-danger" >@ViewBag.Error</label>
     }*@
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal"> Cancel </button>
        <button type="submit" class="btn btn-danger col-md-offset-2"> Delete </button>
    </div>
}
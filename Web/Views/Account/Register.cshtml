@using Sattelite.EntityFramework.ViewModels
@model RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="login-form">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <fieldset class="form-horizontal row">
            <legend class="h3">Новий аккаунт</legend>
            <div class="col-offset-1 col-md-10">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.TextBoxFor(m => m.UserName, new { @placeholder = "User Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "ім'я користувача обов'язкове", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.UserName, "Email обов'язковий", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password, "Пароль має бути більше 6 символів, містити цифри", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @placeholder = "Confirm password", @class = "col-6 form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>

            </div>
        </fieldset>
        <div class="navbar">
            <a class="btn btn-link" href="/">Cancel</a>
            <button class="btn btn-success pull-right" type="submit">Register</button>
        </div>
    }
</div>
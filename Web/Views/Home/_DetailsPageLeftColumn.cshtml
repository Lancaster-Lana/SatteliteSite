@model DetailsLeftColumnViewModel
@using Sattelite.EntityFramework.ViewModels.Client

<div id="main-left" class="col-md-6">
    <div class="post">
        <div class="post-title">
            <h2>
                @if (Model.CurrentArticle != null)
                {
                    @Html.Raw(@Model.CurrentArticle.NewsContent.Title)
                }
                else
                {
                    @Html.Raw(@Model.CurrentProject.ProjectContent.Name)
                }
            </h2>
        </div>
        @*<div class="post-date">
            In @Html.ActionLink(@Model.CurrentArticle.Category.Name, "Category", "Home", new { id = Model.CurrentArticle.Category.Id }, null)
            -
            @Html.Raw(@Model.CurrentArticle.CreatedDate.Value.ToShortDateString()) by @Html.Raw(@Model.CurrentArticle.CreatedBy)
      
        </div>*@

        <div class="post-body">
            <p>
                @if (Model.CurrentArticle != null)
                {
                    @Html.Raw(@Model.CurrentArticle.NewsContent.Content)
                }
                else
                {
                    @Html.Raw(@Model.CurrentProject.ProjectContent.Content)
                }
            </p>
        </div>
    </div>
</div>